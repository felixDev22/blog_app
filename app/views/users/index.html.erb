<section class='user-container'>
  <% @users.each do |user| %>
    <div class='user'>
       <div class='user_Photo'>
    <div><%= image_tag user.photo, class: 'profile-photo' %></div>
  </div>
        <div class='user_name'>
        <h2><%= user.name %></h2>
        <div class=post_nums>
          <p class="post_count">Number of posts: <%= user.posts_counter %></p>
          <p class="view_user">
              <%= link_to "View_details", user_path(user.id) %>
            </p>
        </div>
      </div>
    </div>
  <% end %>
</section>

