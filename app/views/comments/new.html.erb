<div class="form-container">
  <h1>New Comment</h1>

  <%= form_with model: @comment, url: user_post_comments_path, class: "form", local: true do |form| %>
    <div class="form-input">
      <%= form.text_area :text, required: true, class: "form_text ", placeholder: "Add a comment..." %>
    </div>
    <div class='comment-submit-btn'>
      <%= form.submit "Submit comment"%>
    </div>
  <% end %>
  <button class="back"><%=link_to 'Back to posts', user_posts_path %></button>
</div>