<section class="posts_container">
  <% if @post %>
    <div class='post'>
      <div class=post-top>
        <h2><%= @post.title %> by <%= @post.author.name %></h2>
        <p class="comments_likes_top">
          Comments: <%= @post.comments_counter %>,
          Likes: <%= @post.likes_counter %>
        </p>
      </div>
        <p class="post_text"><%= @post.text %></p>
    </div>
    </div>
   
  <% else %>
    <p>No recent posts.</p>
  <% end %>
 <div>
  <section class='comments-area'>
    <% if @post.comments.blank? %>
      <p class="each_comment post_show_comment">No comments available.</p>
      <%= render "alerts/error", message: "No recent comments." %>
    <% else %>
      <div class="comments">
        <h4>Comments:</h4>
        <% @post.comments.includes(:author).each do |comment| %>
          <p class="show_comment">
            <% if comment.author %>
              <strong><%= comment.author.name %>:</strong>
            <% else %>
              <strong>--</strong>
            <% end %>
            <%= comment.text %>
          </p>
        <% end %>
      </div>
    <% end %>
  </section>
  </section>
  </section>
  <div class="pagination">

  <%= content_tag :div, class: "will-paginate-container" do %>
    <%= will_paginate @posts %>
  <% end %>
  
</div>
</section>
